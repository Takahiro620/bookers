<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:success] %>
    <div class="success-message">
        <%= flash[:success] %>
    </div>
<% end %>

        
        <p id="notice"></p>
        <h1>Books</h1>
        <table>
            <thead>
                <tr>
                  <th>Title</th>
                  <th>Body</th>
                  <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% @books.each do |book| %>
                <tr>
                    <td>
                        <span>
                            <%= book.title %>
                        </span>
                    </td>
                    <td>
                        <span>
                             <%= book.body %>
                        </span>
                    </td>
                    <td>    
                        <span>
                                <%= link_to "Show", book_path(book.id) %>
                            
                        </span>
                    </td>

                    <td>
                        <span class="kaka">
                            <%= link_to "Edit", edit_book_path(book.id) %>
                        </span>
                    </td>
                    <td>
                            <span>
                                 <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか？" } %>
                            </span>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        
   
        
        
        
        
        <h2>New book</h2>
        <%= form_with model: @book, url: '/books', method: :post do |f| %>

            <div class="field">
                <label for="book_title">Title</label>
                <%= f.text_field :title %>
            </div>
            <div class="field">
                <label for="book_body">Body</label>
                <%= f.text_area :body %>
            </div>

            <div class="actions">
                  <%= f.submit 'Create Book' %>
            </div>
          <% end %>

